<Window x:Class="xddddd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xddddd"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="unBox" HorizontalAlignment="Left" Height="21" Margin="45,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="115" TextChanged="unBox_TextChanged"/>
        <PasswordBox x:Name="pwBox" HorizontalAlignment="Left" Margin="45,69,0,0" VerticalAlignment="Top" Width="115" Height="21" PasswordChanged="pwBox_PasswordChanged"/>
        <Button x:Name="regButton" Content="Regisztráció" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="75" Click="regButton_Click"/>
        <Button x:Name="loginButton" Content="Bejelentkezés" HorizontalAlignment="Left" Margin="90,120,0,0" VerticalAlignment="Top" Width="75" Click="loginButton_Click"/>
        <Button x:Name="logoutButton" Content="Kijelentkezés" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="75" Click="logoutButton_Click"/>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Height="21" Margin="165,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="editButton" Content="Módosítás" HorizontalAlignment="Left" Margin="90,150,0,0" VerticalAlignment="Top" Width="75" Click="editButton_Click"/>
    </Grid>
</Window>
